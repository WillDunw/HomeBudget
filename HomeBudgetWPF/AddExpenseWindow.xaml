<Window x:Class="HomeBudgetWPF.AddExpenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeBudgetWPF"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="AddExpenseWindow" Height="700" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"> </RowDefinition>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <!-- Modify DB button -->
        <Border Grid.Row="0" Margin="10,10,300,10" BorderThickness="2" BorderBrush="Black">
            <Button x:Name="CurrentDatabaseButton">
                Current DB
            </Button>
        </Border>
        
        <!-- Title -->
        <TextBlock Grid.Row="1" TextAlignment="Center" VerticalAlignment="Center" FontSize="50"
                   TextDecorations="Underline">
            Enter Expense
        </TextBlock>
        
        <!-- Chose Category Combo Box-->
        <TextBlock Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Left"
                   Margin="10,10,10,0">
            Please Select A Category
        </TextBlock>
        <ComboBox Grid.Row="3" Margin="10,10,10,10" x:Name="categoryComboBox">
            
        </ComboBox>
        
        <!-- Date Picker -->
        <TextBlock Grid.Row="4" Margin="10,10,10,0" VerticalAlignment="Bottom">
            Please Select the Date the Expense was Incurred
        </TextBlock>
        <DatePicker Grid.Row="5" Margin="10,10,10,10" x:Name="DateTextBox">
            
        </DatePicker>
        
        <!-- Description Box -->
        <TextBlock Grid.Row="6" Margin="10,15,10,110">
            Description
        </TextBlock>
        <TextBox Grid.Row="6" Margin="10,35,10,10" x:Name="DescriptionTextBox">
            
        </TextBox>
        
        <!-- Amount box -->
        <TextBlock Grid.Row="7" Margin="10,10,10,0" VerticalAlignment="Bottom">
            Amount
        </TextBlock>
        <TextBox Text="{Binding Path=Txt, StringFormat=C}" Grid.Row="8" Margin="10"
                 x:Name="AmountTextBox">
            
        </TextBox>
        
        <!-- Credit option  + Submit -->
        <Grid Grid.Row="9">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.2*"></ColumnDefinition>
                <ColumnDefinition Width="0.8*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>

            </Grid.RowDefinitions>

            <CheckBox Margin="10,0,10,10" Grid.Column="0" x:Name="CreditCheckbox">
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="2" ScaleY="2" />
                </CheckBox.LayoutTransform>
            </CheckBox>

            <TextBlock Grid.Column="1" Margin="0,7,10,10">
                Credit?
            </TextBlock>

            <Button Margin="10" Grid.Column="2" x:Name="AddExpenseButton" Click="CreditCheckbox_Click">
                Add Expense
            </Button>
        </Grid>
    </Grid>
</Window>
